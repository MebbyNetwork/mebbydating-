<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".app.ui.signin.CreateUserProfile">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginBottom="50dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@color/transparent"
            android:scaleType="centerCrop"

            android:src="@drawable/creating_picture" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/_16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:fontFamily="@font/manrope_bold"
            android:text="@string/creating_your_profile"
            android:textAlignment="center"
            android:textColor="@color/dark_grey_normal"
            android:textSize="@dimen/body_xlarge" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/_8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:fontFamily="@font/manrope_medium"
            android:text="@string/we_are_creating_your_profile_it_will_take_a_little_time_please_wait"
            android:textAlignment="center"
            android:textColor="@color/dark_grey_light"
            android:textSize="@dimen/body_small" />



    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>