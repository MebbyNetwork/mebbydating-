<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Mebby" parent="Theme.Material3.DayNight.NoActionBar">

    </style>

    <style name="Theme.Mebby" parent="Base.Theme.Mebby">
        <item name="android:background">@color/background_color</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:statusBarColor">@color/background_color</item>
        <item name="android:navigationBarColor">@color/background_color</item>
    </style>

    <style name="Theme.Mebby.TransparentStatusBar" parent="Theme.Mebby">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">false</item>
    </style>


    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
        <item name="fontFamily">@font/manrope_light</item>
    </style>

    <style name="BottomNavigationView.Active">
        <item name="android:textSize">10sp</item>
        <item name="fontFamily">@font/manrope_semibold</item>
    </style>

    <style name="LabelTextView" parent="">
        <item name="android:textColor">@color/dark_grey_normal</item>
        <item name="android:textSize">@dimen/body_medium</item>
        <item name="android:fontFamily">@font/manrope_semibold</item>
    </style>

    <style name="BottomNavigationView.ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/transparent</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize16dp" parent="">
        <item name="cornerSize">16dp</item>
    </style>

    <style name="RadioButton.Active" parent="">
        <item name="android:fontFamily">@font/manrope_bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="RadioButton.Inactive" parent="">
        <item name="android:fontFamily">@font/manrope</item>
        <item name="android:textColor">#321323</item>
    </style>

    <style name="ImageView.Corner" parent="">
        <item name="cornerSizeBottomLeft">10dp</item>
        <item name="cornerSizeBottomRight">10dp</item>
    </style>

    <style name="Photogallery.ImageView.Corner" parent="">
        <item name="cornerSize">8dp</item>
    </style>


    <style name="Base.Widget.AppCompat.ImageButton.Back" parent="">
        <item name="android:background">@color/transparent</item>
        <item name="contentDescription">@string/back_arrow</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@drawable/arrow_right</item>
    </style>
</resources>